<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="dedy_yuristiawan_wiz" model="ir.ui.view">
            <field name="name">stock.kardex.wizard.name</field>
            <field name="model">stock.kardex</field>
            <field name="arch" type="xml">
                <form string="Kardex Producto">
                    <div class="row">
                        <div class="col-md-6">
                            <group>
                                <field name="location_id"/>
                                <field name="product_id"/>
                            </group>
                        </div>
                        <div class="col-md-6">
                            <group>
                                <field name="date_start"/>
                                <field name="date_end"/>
                            </group>
                        </div>
                    </div>
                    <footer>
                        <button name="create_request" 
                            string="Finished" type="object" 
                            class="btn-primary"/>
                        <button string="Cancel" 
                            class="btn-default" 
                            special="cancel" />
                    </footer>
                </form>
            </field>
        </record>

        <record id="action_view_wizard" model="ir.actions.act_window">
            <field name="name">Kardex</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">stock.kardex</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="dedy_yuristiawan_wiz"/>
            <field name="target">new</field>
        </record>
    </data>
</odoo>
